generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id              Int         @id @default(autoincrement())
  name            String
  email           String      @unique
  city            String
  phone           String
  createdAt       DateTime    @default(now())
}

model Project {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  description     String
  isActive        Boolean     @default(true)
  isModified      Boolean     @default(false)
  isDeleted       Boolean     @default(false)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime?   

  tasks           Task[]
}


model Task {
  id              Int         @id @default(autoincrement())
  projectId       Int         
  name            String      @unique
  description      String
  isActive        Boolean     @default(true)
  isModified      Boolean     @default(false)
  isDeleted       Boolean     @default(false)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime   

  project         Project     @relation(fields: [projectId], references:[id])
}