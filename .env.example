# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
NODE_ENV=development  # or production / staging

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
API_PORT=4000
GATEWAY_PORT=3000
LOGGER_PORT=4001
LOG_DIR=./logs

# ==============================================
# SERVICE URLS
# ==============================================
API_URL=http://localhost:4000
GATEWAY_URL=http://localhost:3000
LOGGER_URL=http://localhost:4001

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="mysql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DATABASE_NAME>"

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET="<your_jwt_secret_here>"
JWT_EXPIRES_IN="7d"

# ==============================================
# AWS CONFIGURATION
# ==============================================
AWS_ACCESS_KEY_ID=<your_aws_access_key_id>
AWS_SECRET_KEY=<your_aws_secret_key>
AWS_REGION=<your_aws_region>
CLOUDWATCH_LOG_STREAM=<your_log_stream_name>

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info  # possible values: error, warn, info, debug

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,http://localhost:4001
