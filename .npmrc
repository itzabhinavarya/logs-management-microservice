# PNPM Configuration for Monorepo
# ======================================

# Enable hoisting for better disk space efficiency
# This moves common dependencies to the root node_modules
hoist=true
hoist-pattern[]=*

# Strict peer dependencies check
# Set to false to prevent installation failures due to peer dependency issues
strict-peer-dependencies=false

# Auto install peer dependencies
auto-install-peers=true

# Shamefully hoist (for compatibility with tools that expect flat node_modules)
# Use only if needed for specific tools
# shamefully-hoist=true

# Use symlinks for workspace packages
# This is the default behavior and recommended for monorepos
symlink=true

# Save exact versions
# Uncomment to save exact versions instead of ranges
# save-exact=true

# Lockfile settings
lockfile=true

# Registry settings (uncomment and modify if using private registry)
# registry=https://registry.npmjs.org/

# Cache settings
# store-dir=~/.pnpm-store

# Logging
loglevel=info

# Engine strict
engine-strict=true

