{
  "name": "enterprise-microservice",
  "version": "1.0.0",
  "description": "Enterprise-grade microservices architecture with NestJS, Prisma, and centralized logging",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "clean:install": "pnpm run clean && pnpm install",
    "build": "pnpm -r --filter './apps/*' run build",
    "build:api": "pnpm --filter api run build",
    "build:gateway": "pnpm --filter gateway run build",
    "build:logger": "pnpm --filter logger run build",
    "dev:api": "pnpm --filter api start:dev",
    "dev:logger": "pnpm --filter logger start:dev",
    "dev:gateway": "pnpm --filter gateway start:dev",
    "dev:all": "concurrently -n \"API,LOGGER,GATEWAY\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"pnpm dev:api\" \"pnpm dev:logger\" \"pnpm dev:gateway\"",
    "start:all": "concurrently \"pnpm --filter api start:prod\" \"pnpm --filter logger start:prod\" \"pnpm --filter gateway start:prod\"",
    "lint": "pnpm -r --filter './apps/*' run lint",
    "lint:fix": "pnpm -r --filter './apps/*' run lint --fix",
    "test": "pnpm -r --filter './apps/*' run test",
    "test:watch": "pnpm -r --filter './apps/*' run test:watch",
    "test:cov": "pnpm -r --filter './apps/*' run test:cov",
    "format": "pnpm -r --filter './apps/*' run format",
    "db:generate": "pnpm --filter api run db:generate",
    "db:migrate": "pnpm --filter api run db:migrate",
    "db:studio": "pnpm --filter api run db:studio",
    "db:push": "pnpm --filter api run db:push",
    "db:reset": "pnpm --filter api run db:reset",
    "postinstall": "pnpm run db:generate"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "prisma",
    "monorepo",
    "pnpm-workspace",
    "api-gateway",
    "winston",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "prisma": "^6.17.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.17.0",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.18.3"
  }
}