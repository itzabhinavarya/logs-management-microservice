{
  "name": "enterprise-microservice",
  "version": "1.0.0",
  "description": "Enterprise-grade microservices architecture with NestJS, Prisma, and centralized logging",
  "main": "index.js",
  "private": true,
  "scripts": {
    "install:all": "pnpm install",
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "clean:install": "pnpm run clean && pnpm install",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:gateway": "turbo run build --filter=gateway",
    "build:logger": "turbo run build --filter=logger",
    "dev:api": "turbo run start:dev --filter=api",
    "dev:logger": "turbo run start:dev --filter=logger",
    "dev:gateway": "turbo run start:dev --filter=gateway",
    "dev:all": "turbo run start:dev",
    "start:all": "turbo run start:prod",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "format": "turbo run format",
    "db:generate": "turbo run db:generate --filter=api",
    "db:migrate": "turbo run db:migrate --filter=api",
    "db:studio": "turbo run db:studio --filter=api",
    "db:push": "turbo run db:push --filter=api",
    "db:reset": "turbo run db:reset --filter=api",
    "postinstall": "turbo run db:generate --filter=api"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "prisma",
    "monorepo",
    "pnpm-workspace",
    "api-gateway",
    "winston",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "concurrently": "^9.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "prisma": "^6.17.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.17.0",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.18.3"
  }
}